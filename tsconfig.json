{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es6", "dom"],
        "typeRoots": ["node_modules/@types"],
        "types": ["reflect-metadata"],
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration" : true,
        "sourceMap" : true,
        "outDir" : "dts"
    },
    "exclude": [
        "node_modules"
    ]
}